<Window x:Class="AbevBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AbevBot"
        Height="720" Width="1280">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="170px"/>
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <!-- Control elements -->
    <StackPanel Grid.Column="0" Orientation="Vertical">
      <Button x:Name="btnPause" Width="150" Height="25" Content="Toggle notifications pause" Margin="0,30,0,0"/>
      <Button x:Name="btnSkip" Width="150" Height="25" Content="Skip notification" Margin="0,10,0,0"/>
      <TextBlock x:Name="tbNotificationsQueue" Text="Notifications in queue: 0" Margin="5,10,5,0"/>
      <CheckBox x:Name="chkTTS" Width="150" Height="25" Content="!tts enabled (chat)" IsChecked="True" Margin="0,30,0,0" Checked="ChkTTS_CheckChanged" Unchecked="ChkTTS_CheckChanged"/>
    </StackPanel>

    <!-- Test elements -->
    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom">
      <TextBox x:Name="tbTTSVoice" Width="150" Height="25" Text="Brian" VerticalContentAlignment="Center"/>
      <TextBox x:Name="tbTTSText" Width="150" Height="25" Text="Test message" Margin="0,10,0,0" VerticalContentAlignment="Center"/>
      <Button x:Name="btnTestTTS" Width="150" Height="25" Content="Test TTS" Margin="0,10,0,0"/>
      <Button x:Name="btnTestVideo" Width="150" Height="25" Content="Test Video" Margin="0,20,0,30"/>
    </StackPanel>

    <!-- Video player, text display, etc -->
    <Grid Grid.Column="1" Background="#FF00FF00">
      <MediaElement x:Name="VideoPlayer"/>
      <TextBlock x:Name="tbTextOutput" FontSize="32" Foreground="White" MaxWidth="500" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
    </Grid>
  </Grid>
</Window>
