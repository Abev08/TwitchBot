<Window x:Class="TwitchBotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AbevBot - WPF"
        Height="720" Width="1280"
        Background="Lime">
    <Grid>
        <MediaElement x:Name="VideoPlayer"/>
        <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" Orientation="Horizontal">
        <Button x:Name="btnTestTTS" Width="60" Height="25" Content="Test TTS"/>
        <TextBox x:Name="tbText" Width="120" Height="25" Text="This is a test" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
